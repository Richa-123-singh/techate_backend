<% include ./partials/header %>
<section id="main-content">
        <section class="wrapper">
          <div class="row">
            <div class="col-lg-12">
              <h3 class="page-header"><i class="fa fa fa-bars"></i> Edit Form</h3>
              <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="#">Home</a></li>
                <li><i class="fa fa-bars"></i> Forms</li>
              </ol>
            </div>
          </div>
          <!-- page start-->
          <div class="container">
                <% if(error && error.length > 0) { %>
                    <div class="alert alert-danger">
                      <p><%= error %></p>
                    </div>
                    <% } else if(success && success.length >0) { %>
                    <div class="alert alert-success">
                      <p><%= success %></p>
                    </div>
                    <% } %>
            <div class="col-lg-12">
              <div class="recent">
                <h3>Registration No: <%= registration %></h3>
                <h3>Upload Image:</h3>
              </div>
              <div id="errormessage"></div>
              <form action="/update_images" method="POST" role="form" enctype="multipart/form-data" class="contactForm">
                <div class="form-group">
                  <input type="number" style="display:none" class="form-control" name="registration" id="registration" value="<%= registration %>" placeholder="Registration No" minlength="4" data-msg="Please enter at least 8 digits" required/>
                  <div class="validation"></div>
                </div>

                <input id="image" type="file" name="image" accept="image/*" required/>
                <div class="text-center"><button type="submit" class="btn btn-primary btn-lg">Add Student</button></div>
              </form>
            </div>
          </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->
    </section>
    <!-- container section end -->
    <!-- javascripts -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="js/jquery.scrollTo.min.js"></script>
    <script src="js/jquery.nicescroll.js" type="text/javascript"></script>
    <!--custome script for all page-->
    <script src="js/scripts.js"></script>
    <script src="contactform/contactform.js"></script>
  
  
  </body>
  
  </html>